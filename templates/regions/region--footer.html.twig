{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% if content %}

  <div{{ attributes }}>
  {# Now moved to region-footer SDC 
     footer_structured_data contains the elements to render in each col
     of the footer
   #}
  {% embed 'ridd:region_footer' with {
     footer_region_content: footer_structured_data,
     site_name: site_name,
     site_logo: site_logo,
     site_slogan: site_slogan
  } %}
  {% endembed %}
{% endif %}
