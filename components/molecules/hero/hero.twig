{# 
  # Hero twig file for Ridd theme
 #}
<div{{ attributes.addClass('ridd-hero-hero-wrapper') }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
   <div class="ridd-hero-container">

    <div class="ridd-hero-content">
    {{ content.field_title }}
    {{ content.body }}
    {{ content.field_hero_link }}
    </div>
    <div class="rounded col-span-2 w-full h-full bg-white flex items-center
                home-page-hero-image-wrapper">
      {{ content.field_hero_image}}
    </div>
  </div>
  {% endblock %}
</div>
